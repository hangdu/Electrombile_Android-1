<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3">

    <include
        android:id="@+id/ll_button"
        layout="@layout/my_layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp">

        <com.xunce.electrombile.activity.CircleImageView
            android:id="@+id/img_car"
            android:layout_marginLeft="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/dark"
            android:src="@drawable/default_carimage"/>

        <LinearLayout
            android:layout_toRightOf="@+id/img_car"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_CarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆名称"
                android:textColor="#363636"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定日期"
                android:textColor="#363636"
                android:textSize="12sp"/>

            <TextView
                android:id = "@+id/tv_CarIMEI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备号"
                android:textColor="#363636"
                android:textSize="12sp"/>

            <TextView
                android:id = "@+id/tv_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#363636"
                android:textSize="12sp"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_changeCarName"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_changeCarName"
            android:layout_marginLeft="29dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="修改名称"
            android:textColor="#363636"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_changeCarPic"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_changeCarPic"
            android:layout_marginLeft="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="修改照片"
            android:textColor="#363636"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/relativeLayout_DeviceChange"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:clickable="true"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="37dp"
            android:textSize="14sp"
            android:textColor="#464646"
            android:text="切换" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_DeviceUnbind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="37dp"
            android:textSize="14sp"
            android:textColor="#464646"
            android:text="设备解绑" />
    </RelativeLayout>
</LinearLayout>
