<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation = "vertical">

    <include
        android:id="@+id/ll_button"
        layout="@layout/my_layout_title" />

    <TextView
        android:layout_below="@+id/ll_button"
        android:id="@+id/tv_curentCar"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在显示车辆"
        android:textSize="14sp"
        android:textColor="#7f7f7f"/>

    <RelativeLayout
        android:layout_below="@+id/tv_curentCar"
        android:id = "@+id/RelativeLayout_currentcar"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <com.xunce.electrombile.activity.CircleImageView
            android:id="@+id/menuimage1"
            android:layout_marginLeft="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/dark"
            android:src="@drawable/default_carimage"/>

        <TextView
            android:id="@+id/menutext1"
            android:layout_toRightOf="@+id/menuimage1"
            android:layout_marginLeft="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="一号车"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_below="@+id/RelativeLayout_currentcar"
        android:id="@+id/line"
        android:layout_marginTop="14dp"
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="#777777">
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/line"
        android:id="@+id/tv_OtherCar"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#7f7f7f"
        android:text="其他车辆"/>

    <RelativeLayout
        android:layout_below="@+id/tv_OtherCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id = "@+id/OtherCarListview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="31dp">
        <Button
            android:id = "@+id/btn_AddDevice"
            android:layout_centerInParent="true"
            android:layout_width="137.33dp"
            android:layout_height="30.67dp"
            android:background="@drawable/btn_rectangular"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text = "添加车辆"/>
    </RelativeLayout>
</RelativeLayout>
